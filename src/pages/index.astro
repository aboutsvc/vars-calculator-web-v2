---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';

import Button from '~/components/ui/Button.astro';
import Image from '~/components/common/Image.astro';

const appStoreImg = '~/assets/images/app-store.png';
const appStoreDownloadLink = '';

const googlePlayImg = '~/assets/images/google-play.png';
const googlePlayDownloadLink = 'https://play.google.com/store/apps/details?id=com.aboutsvc.varscalculator';

const metadata = {
  title: 'VarsCalculator | Simplify your calculations with custom variable expressions',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>

  <!-- Hero2 Widget ******************* -->

  <Hero2
   
    image={{
      src: '~/assets/images/default.png',
      alt: 'VarsCalculator Image',
    }}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white highlight">VarsCalculator App</span>: <br /> smart calculations <span
        class="hidden xl:inline">made simple</span
      >
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Streamline your calculations effortlessly: your ultimate tool for customized expressions and variable-based solutions.
      </span>
      Download now and experience the power of smarter math at your fingertips!
    </Fragment>

    <div slot="actions" class="flex max-w-sm gap-4">
      <!-- <Button variant="link" href={appStoreDownloadLink}>
        <Image src={appStoreImg} alt="App Store Image" width={200} />
      </Button> -->

      <Button variant="link" href={googlePlayDownloadLink}>
        <Image src={googlePlayImg} alt="Google Play Image" width={200} />
      </Button>
    </div>
  </Hero2>

  <!-- Features3 Widget ************** -->

  <Features3
    id="guide"
    title="How to use VarsCalculator App?"
    subtitle="Tired of recalculating complex formulas every time? VarsCalculator App offers an innovative solution. With saved variable expressions and a quick calculation history, you can now solve problems in seconds. Save your expressions today and transform the way you calculate!"
    tagline="Step-by-step guide"
    columns={2}
    items={[
      {
        title: 'Download and install VarsCalculator App',
        description: `Get started by downloading our intuitive app from your device's app store and enjoy seamless calculations.`,
        icon: 'tabler:square-number-1',
      },
      {
        title: 'Set up variables',
        description:
          'Define your custom variables (X, Y, Z) and save your frequently used expressions effortlessly.',
        icon: 'tabler:square-number-2',
      },
      {
        title: 'Explore saved expressions',
        description: 'Organize and manage your saved mathematical expressions for quick access anytime.',
        icon: 'tabler:square-number-3',
      },
      {
        title: 'Calculate with ease',
        description: `Input values for your variables, retrieve results instantly, and boost your productivity with accurate calculations!`,
        icon: 'tabler:square-number-4',
      },
    ]}
    
  />

  <!-- Content Widget **************** -->

  <Content
    id="features"
    isReversed
    items={[
      {
        title: 'User-friendly interface',
        description:
          'An intuitive and simple design that makes it easy to perform calculations and navigate through saved expressions.',
        icon: 'tabler:wand',
      },
      {
        title: 'Custom variable expressions',
        description:
          'Save and customize expressions with variables (X, Y, Z) to suit your unique calculation needs.',
        icon: 'tabler:settings',
      },
      {
        title: 'Quick calculation history',
        description:
          'Access your past calculations effortlessly, enabling you to track and reuse them without starting from scratch.',
        icon: 'tabler:template',
      },
      {
        title: 'Instant results',
        description: 'Enter variable values and instantly obtain accurate results, streamlining complex and repetitive calculations.',
        icon: 'tabler:carousel-horizontal',
      },
    ]}
    image={{
      src: '~/assets/images/feature.png',
      alt: "VarsCalculator's Feature Image",
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Main Features</h3>
    </Fragment>
  </Content>

